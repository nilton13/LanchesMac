<table border="1" width="100%">
    <tr>
        <td><!--Formulário para enviar os arquivos-->
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                asp-action="UploadFiles">
                <div class="form-group">
                    <div class="col-md-10" >
                        <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivos(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                  asp-action="GetImagens">
                  <div class="form-group">
                      <div class="col-md-10">
                          <input type="submit" value="Visualizar arquivos do Servidor" class="button btn-outline-warning" />
                      </div>
                  </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if(ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>